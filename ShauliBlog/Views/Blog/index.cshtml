@using ShauliBlog.Models;
@using ShauliBlog.Utils;

@model List<BlogVisitorModel>

@{
    ViewBag.Title = "index";
}

    <div id="mainContent">
        <div>
            <div id="search">
                <form action="">
                    <div>
                        <text>post publish start date: </text>
                        <input type="date" name="searchStartDate">
                    </div>

                    <div>
                        <text>post publish end date: </text>
                        <input type="date" name="searchEndDate">
                    </div>

                    <div>
                        <text>post writter: </text>
                        <input type="text" name="searchPostWritter">
                    </div>

                    <div>
                        <text>post writter e-mail:</text>
                        <input type="email" name="searchPostWritterEmail">
                    </div>

                    <div>
                        <text>post phrases: </text>
                        <input type="text" name="searchPostPhrases">
                    </div>

                    <div>
                        <text>number of posts comments:</text>
                        <input type="range" name="searchPostCommentsNumber" min="0" max="10">
                    </div>
                    <br />
                    <input type="submit" value="Send" style="float: left;">

                </form>
            </div>

            @foreach (BlogVisitorModel item in Model)
            {

                @*********** Post *********@
                <section>
                    <article class="blogPost">
                        <header>
                            <h2>@Html.DisplayFor(model => item.Headline)</h2>

                            <p>Posted on <time> @Html.DisplayFor(model => item.PublishDate)</time> by <a href="#">@Html.DisplayFor(model => item.Author)</a> - <a href="#comments">@(item.Comments != null ? item.Comments.Count : 0) comments</a></p>
                        </header>
                        <div>

                            <p>@Html.DisplayFor(model => item.Content)</p>

                            @Html.ImageFor(model => item.Image)

                            @Html.VideoFor(model => item.Video)
                          
                        </div>
                    </article>
                </section>

                @*********** Comment *********@

                <section id="comments">
                    <h3>Comments</h3>

                    @foreach (Comment comment in item.Comments)
                    {
                        <article>
                            <header>
                                <a href="#">@Html.DisplayFor(model => comment.Author)</a> on <time> @Html.DisplayFor(model => item.PublishDate) </time>
                            </header>
                            <p>@Html.DisplayFor(model => comment.Content)</p>
                        </article>
                    }

                </section>


                @*********** New Comment *********@
                using (Ajax.BeginForm("Create", "Comment", new AjaxOptions()
                {
                    HttpMethod = "Post",
                }))
                {
                    <h3>Post a comment</h3>
                    <p>
                        @Html.DisplayNameFor(model => item.NewComment.Author)
                        @Html.TextBoxFor(model => item.NewComment.Author)
                    </p>
                    <p>
                        @Html.DisplayNameFor(model => item.NewComment.AuthorWebsiteAddress)
                        @Html.TextBoxFor(model => item.NewComment.AuthorWebsiteAddress)
                    </p>
                    <p>
                        @Html.DisplayNameFor(model => item.NewComment.Content)
                        @Html.TextBoxFor(model => item.NewComment.Content)
                    </p>
                    <p><input type="submit" value="Post comment" /></p>
                }
            }


        </div>

    </div>



